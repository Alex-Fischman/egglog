(datatype Math
  (Num i64)
  (Var String)
  (Mul Math Math))

(function hi (Math) i64 :merge (min old new))
(function lo (Math) i64 :merge (max old new))

(rule ((= mul (Mul a b)))
      ((set (lo mul) 
          (min (min (* (lo a) (lo b)) (* (lo a) (hi b)))
               (min (* (hi a) (lo b)) (* (hi a) (hi b)))))))

(let x (Var "x"))
(let e (Mul x x))

(set (lo x) -10)
(set (hi x) 10)

(run 1)

(check (= (lo e) -100))

(rule ((= mul (Mul a a)))
      ((set (lo mul) (* (lo a) (lo a)))))

(run 1)
(check (= (lo e) 100))

;; testing extraction of rationals
(query-extract (lo e))
