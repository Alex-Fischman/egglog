(datatype Math
  (Num Int)
  (Var Int)
  (Mul Math Math))

(function hi (Expr) Int (merge a b (min a b)))
(function lo (Expr) Int (merge a b (max a b)))

(rule ((= mul (Mul a b)))
      ((= (lo mul) 
          (min (min (* (lo a) (lo b)) (* (lo a) (hi b)))
               (min (* (hi a) (lo b)) (* (hi a) (hi b)))))))

(define x (Var 234))
(define e (Mul x x))

(assert (= (lo x) -10))
(assert (= (hi x)  10))

(run 1)

(check (= (lo e) -100))

(rule ((= mul (Mul a a)))
      ((= (lo mul) (* (lo a) (lo a)))))

(run 1)
(check (= (lo e) 100))
