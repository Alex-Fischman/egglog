(datatype Math
  (Num i64)
  (Var String)
  (Mul Math Math))

(function hi (Math) (Min i64))
(function lo (Math) (Max i64))

(rule ((= mul (Mul a b)))
      ((= (lo mul) 
          (min (min (* (lo a) (lo b)) (* (lo a) (hi b)))
               (min (* (hi a) (lo b)) (* (hi a) (hi b)))))))

(define x (Var "x"))
(define e (Mul x x))

(assert (= (lo x) -10))
(assert (= (hi x)  10))

(run 1)

(check (= (lo e) -100))

(rule ((= mul (Mul a a)))
      ((= (lo mul) (* (lo a) (lo a)))))

(run 1)
(check (= (lo e) 100))
